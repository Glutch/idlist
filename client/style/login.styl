.login
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background #1d1e24
  
  .loginBox
    width 300px
    height 400px
    margin 50px auto 50px auto
    text-align center
    
    img
      border-radius 4px
      display block
      margin 0px auto 20px auto
      
.at-form
  text-align center

.at-title
  display none
  
.at-input
  background none
  color white
  margin auto
  
  input
    background none
    padding 16px 15px 15px 15px
    border 2px solid #34343a
    width 250px
    margin-top 10px
    color white
    font-size 13px
    &:focus
      border 2px solid #D34F51

.submit
  padding 17px 10px 15px 10px
  border 2px solid #34343a
  background none
  width 250px
  margin-top 10px
  color #727277
  text-transform uppercase
  font-size 12px
  letter-spacing 2px
  transition 0.1s
  cursor pointer
  &:hover
    border 2px solid #D34F51
    background #D34F51
    color white
    
.at-signup-link, .at-signin-link
  position relative
  
  p
    font-size 12px
    color #6A6A6E
    
    a
      color #D34F51
      font-size 12px